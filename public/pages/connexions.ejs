<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../images/logo/ic.ico" type="image/x-icon">
    <link rel="stylesheet" href="../styles/css/connexions.css">
    <title>
        <%= data %>
    </title>
</head>

<body>
    <%- include('./components/addUser') %>
    <div class="forms">
        <% if (data == 'connexion' ) { %>
            <div class="error <%= active %>">
                <p><%= texte %></p>
            </div>
            <form action="/login" method="post" class="connexion active">
                <div class="logo-form">
                    <h2>Connexion</h2>
                </div>
                <div id="div-name">
                    <div class="icone">
                        <img src="../images/svg/user.svg" alt="" class="svg">
                    </div>
                    <input type="text" name="username" id="username" placeholder="Votre nom..." required>
                </div>
                <div id="div-num">
                    <div class="icone">
                        <img src="../images/svg/phone.svg" alt="" class="svg">
                    </div>
                    <p>+241</p>
                    <input type="tel" name="usernum" id="usernum" placeholder="074937621" required>
                </div>
                <button type="submit">Se connecter</button>
            </form>

            <% } else {%>
                <div class="error <%= active %>">
                    <p><%= texte %> </p>
                </div>
                <form action="/create" method="post" class="creation active">
                    <div class="logo-form">
                        <h2>Créé un compte</h2>
                    </div>
                    <div id="div-name">
                        <div class="icone">
                            <img src="../images/svg/user.svg" alt="" class="svg">
                        </div>
                        <input type="text" name="name" id="name" placeholder="Votre nom..." required>
                    </div>
                    <div id="div-num">
                        <div class="icone">
                            <img src="../images/svg/phone.svg" alt="" class="svg">
                        </div>
                        <p>+241</p>
                        <input type="tel" name="numero" id="numero" placeholder="074937621" required>
                    </div>
                    <button type="submit">Cree mon compte</button>
                </form>
                <% } %>
    </div>
    <%- include('./components/footer') %>
</body>

</html>